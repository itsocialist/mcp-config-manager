{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "skipLibCheck": true
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/renderer/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*",
    "src/main/services/__tests__/**/*"
  ]
}